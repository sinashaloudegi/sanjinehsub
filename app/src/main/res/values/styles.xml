<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/font_style</item>


        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:fontFamily" tools:targetApi="jelly_bean">@font/font_style</item>-->

        <item name="android:typeface">serif</item>

        <!--    <item name="android:fontFamily">@font/iranyekanwebregular</item>
            <item name="fontFamily">@font/iranyekanwebregular</item> &lt;!&ndash; target android sdk versions < 26 and > 14 if theme other than AppCompat &ndash;&gt;
            -->

        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#0c9ce3</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:fontFamily">@font/font_style</item>

    </style>
</resources>
