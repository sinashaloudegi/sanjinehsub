<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/rootLayout"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:padding="@dimen/margin5"
        android:layout_width="match_parent"
        android:background="@color/dark_row_color"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:id="@+id/txtDateCaption"
            android:textSize="@dimen/font_12"
            android:text="@string/date"

        />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/credit_cause_value_color"
            android:layout_toLeftOf="@+id/txtDateCaption"
            android:layout_marginRight="@dimen/margin5"

            android:textSize="@dimen/font_12"
            android:id="@+id/txtDate"/>






    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/light_row_color"
        android:padding="@dimen/margin5"

        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"

            android:id="@+id/txtMablaghSaresidPardakhtNashodeCaption"

            android:textSize="@dimen/font_12"
            android:text="@string/mablagh_saresid_pardakht_nashode"

        />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/credit_cause_value_color"
            android:layout_toLeftOf="@+id/txtMablaghSaresidPardakhtNashodeCaption"
            android:layout_marginRight="@dimen/margin5"

            android:textSize="@dimen/font_12"
            android:id="@+id/txtMablaghSaresidPardakhtNashode"/>






    </RelativeLayout>






</LinearLayout>