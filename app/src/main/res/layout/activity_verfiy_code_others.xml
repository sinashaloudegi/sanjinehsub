<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@color/sanjinehColor"
    android:paddingRight="@dimen/margin10"
    android:paddingLeft="@dimen/margin10"
    android:paddingBottom="@dimen/button_margin_button"

    xmlns:android="http://schemas.android.com/apk/res/android">


 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
  <ImageView

      android:id="@+id/imgLogoVerifyOthers"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/size8"

      app:srcCompat="@drawable/ic_logo"/>



  <ImageView
      android:padding="@dimen/padding_5"
      android:id="@+id/imgBack"
      android:layout_width="wrap_content"
      android:layout_centerVertical="true"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/size8"
      android:layout_alignParentLeft="true"

      app:srcCompat="@drawable/ic_back"/>



 </RelativeLayout>


 <EditText
     android:layout_width="match_parent"
     android:layout_centerInParent="true"
     android:backgroundTint="@color/white"
     android:textColor="@color/white"
     android:id="@+id/edtVerifyCodeOthers"
     android:maxLength="4"
     android:inputType="phone"
android:hint="@string/activision_code"
android:textColorHint="@color/darker_gray"
     android:gravity="center"
     android:layout_height="wrap_content" />

 <ProgressBar
     android:id="@+id/prgVerifyCodeOthers"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:visibility="invisible"
     android:layout_centerHorizontal="true"
     android:layout_above="@+id/btnEnterVerifyCodeOthers"
     android:layout_marginBottom="@dimen/size50"
     />

 <android.support.v7.widget.AppCompatButton
android:id="@+id/btnEnterVerifyCodeOthers"

     android:layout_width="match_parent"
     android:text="@string/enter"
     android:textColor="@color/dark_blue"
     app:backgroundTint="@color/yellow_button"
android:layout_alignParentBottom="true"
android:layout_marginTop="@dimen/margin20"
android:layout_marginBottom="@dimen/margin_50"
android:textSize="@dimen/button_text_size"
     android:layout_height="wrap_content"
     />


</RelativeLayout>
