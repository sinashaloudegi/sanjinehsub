<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/curve_accepted_visit_shape"
    android:gravity="center"
    android:weightSum="100">

    <ImageView
        android:id="@+id/imgVisit"
        android:layout_width="@dimen/design_navigation_icon_size"
        android:layout_height="68dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/visibility" />


    <ImageView
        android:id="@+id/imgDownload"
        android:layout_width="@dimen/design_navigation_icon_size"
        android:layout_height="68dp"

        android:layout_marginStart="69dp"
        android:layout_marginLeft="69dp"
        android:layout_toRightOf="@+id/imgVisit"
        android:baselineAligned="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgVisit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/download" />


    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_toLeftOf="@+id/textNum"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/navigation_text_size"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgDownload"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textNum"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="62dp"
        android:gravity="center"
        android:text="fdgdfgdfgggggg"
        android:textColor="@color/black"
        android:textSize="@dimen/navigation_text_size"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textDate"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>